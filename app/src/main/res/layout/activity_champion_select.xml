<?xml version="1.0" encoding="utf-8"?>
<com.github.kko7.manaflux_android.CustomElements.CustomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/champion_select_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/default_bg">

    <Button
        android:id="@+id/spellButton"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/spellButton2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="20dp" />

    <Spinner
        android:id="@+id/runes"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="151dp"
        android:layout_marginBottom="29dp" />

    <com.github.kko7.manaflux_android.CustomElements.CircularImageView
        android:id="@+id/profile_image_round_corner"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="141dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/test" />
</com.github.kko7.manaflux_android.CustomElements.CustomLayout>